<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CosmicWorks Sample App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" rel="stylesheet" integrity="sha256-8M+b2Hj+vy/2J5tZ9pYDHeuPD59KsaEZn1XXj3xVhjg=" crossorigin="anonymous">
    <link rel="icon" type="image/x-icon" href="favicon.ico">
</head>
<body class="vh-100 d-flex flex-column justify-content-start">
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand mb-0" href="/index">
                <span>
                    CosmicWorks Sample App
                </span>                
            </a>
        </div>
    </nav>
    <main class="d-flex flex-grow-1 flex-row justify-content-start align-items-stretch">
        <div class="d-flex flex-column flex-shrink-0 bg-dark">
            <ul class="nav nav-pills nav-flush flex-column mb-auto text-center">
                <li class="nav-item">
                    <a class="nav-link link-light py-3 border-bottom rounded-0" current-route current-route-class="active" href="/index">
                        <i class="bi bi-house-door"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link link-light py-3 border-bottom rounded-0" current-route current-route-class="active" href="/products">
                        <i class="bi bi-speedometer2"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link link-light py-3 border-bottom rounded-0" current-route current-route-class="active" href="/search">
                        <i class="bi bi-search"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link link-light py-3 border-bottom rounded-0" current-route current-route-class="active" href="/chat">
                        <i class="bi bi-chat-left-dots"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link link-light py-3 border-bottom rounded-0" current-route current-route-class="active" href="/about">
                        <i class="bi bi-info-circle"></i>
                    </a>
                </li>
            </ul>
        </div>
        <article class="container pb-2">
            @RenderBody()
        </article>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous" async></script>
    <script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js" integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D" crossorigin="anonymous" async></script>
</body>
</html>